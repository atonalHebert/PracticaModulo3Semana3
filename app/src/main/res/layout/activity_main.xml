<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Toolbar -->
    <include android:id="@+id/mascotasActionBar"
        layout="@layout/appbar_mascotas_petagram"
        ></include>

    <!--Lista de mascotas-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvMascotas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margen_recyclerview"
        android:paddingRight="@dimen/margen_recyclerview"
        android:layout_below="@id/mascotasActionBar">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>